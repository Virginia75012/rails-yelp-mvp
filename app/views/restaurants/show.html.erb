<div class="container mt-3">
  <div class="row">
    <div class="col d-flex flex-column align-items-center">
      <h1>Welcome to <strong>"<%= @restaurant.name %>"</strong></h1>
      <div class="mt-5">
        <p>Address : <em><%= @restaurant.address %></em></p>
        <p>Phone : <em><%= @restaurant.phone_number %></em></p>
        <p>Category : <em><%= @restaurant.category %></em></p>
      </div>
      <div class="col-6">
        <h2>Reviews</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Review</th>
              <th scope="col">Rating</th>
            </tr>
          </thead>
          <tbody>
            <% @restaurant.reviews.each do |review| %>
            <tr>
              <td><%= Time.now.strftime("%d/%m/%Y") %></td>
              <td><%= review.content %></td>
              <td><%= review.rating %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-6">
        <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Save Review", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div>
        <%= link_to "Back to All Restaurants", restaurants_path, class: "btn btn-primary"%>
        <%= link_to "Add a review for this restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>


